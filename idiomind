#!/bin/bash
# -*- ENCODING: UTF-8 -*-

if [ ! -d "$HOME/.idiomind" ]; then
	/usr/share/idiomind/ifs/1u && exit
	if [ ! -d "$HOME/.idiomind" ]; then
		exit 1
	fi
fi
source /usr/share/idiomind/ifs/c.conf
source /usr/share/idiomind/ifs/trans/$lgs/items_lists.conf

if [ -z "$1" ]; then
	if [ -f $DT/.upt ]; then
		rm -f $DT/.upt
	fi
	
		# write in /tmp
	if [ ! -d $DT ]; then
		mkdir $DT
	fi
	if [ $? -ne 0 ]; then

		$yad --name=idiomind \
		--image=error --button=gtk-ok:1\
		--text=" <b>$write_err</b>" \
		--image-on-top --sticky  \
		--width=320 --height=80 \
		--borders=2 --title=Idiomind \
		--skip-taskbar --center \
		--window-icon=idiomind & exit 1
	fi
	
	# check directories
	if [ -f $DC_tl/.cnfg1 ]; then
		if [[ "$(cat $DC_tl/.cnfg1 | wc -l)" -lt 1 ]]; then
			touch "$DT/ntpc"
		fi
	fi
	
	yad --geometry=185x318-200-450 --width=175 --height=220 \
	--name=idiomind --fixed --title="Idiomind" --no-buttons \
	--icons --single-click --on-top --borders=0 \
	--read-dir=$DS/default/new --item-width=68 \
	--window-icon=idiomind --class=idiomind &
	
	# init count for log weekly report
	echo "strt.1.strt" >> \
	$DC/addons/stats/.log &
	
	# _______________new session
	d1="$(date +%d)"
	[[ -f $DC_s/cnfg15 ]] && d2=$(cat $DC_s/cnfg15)
	
	if [ "$d1" != "$d2" ] || [ ! -f $DC_s/cnfg15 ]; then
		echo "$(date +%d)" > $DC_s/cnfg15
		echo "--new session"

		# screen size
		wh=$DC_s/cnfg18
		xrandr | grep '*' | awk '{ print $1 }' > $wh
		sed -i 's/x/\n/' $wh
		y=$(sed -n 2p $wh)

		if [ $y -gt 1200 ]; then
			echo 450 >> $wh
			echo 520 >> $wh
			echo 500 >> $wh
			echo 320 >> $wh
			echo 260 >> $wh
			echo 190 >> $wh
			echo 125 >> $wh
			echo 380 >> $wh
			echo 120 >> $wh
			echo 460 >> $wh
			echo 400 >> $wh
			echo 410 >> $wh
			exit
			
		elif [ $y -ge 1080 ]; then
			echo 450 >> $wh
			echo 520 >> $wh
			echo 500 >> $wh
			echo 320 >> $wh
			echo 260 >> $wh
			echo 190 >> $wh
			echo 100 >> $wh
			echo 300 >> $wh
			echo 120 >> $wh
			echo 460 >> $wh
			echo 400 >> $wh
			echo 410 >> $wh
			exit
			
		elif [ $y -ge 1024 ]; then
			echo 430 >> $wh
			echo 490 >> $wh
			echo 490 >> $wh
			echo 320 >> $wh
			echo 260 >> $wh
			echo 190 >> $wh
			echo 100 >> $wh
			echo 320 >> $wh
			echo 120 >> $wh
			echo 460 >> $wh
			echo 390 >> $wh
			echo 410 >> $wh
			exit
			
		elif [ $y -gt 700 ]; then
			echo 420 >> $wh
			echo 480 >> $wh
			echo 470 >> $wh
			echo 320 >> $wh
			echo 230 >> $wh
			echo 170 >> $wh
			echo 100 >> $wh
			echo 300 >> $wh
			echo 120 >> $wh
			echo 460 >> $wh
			echo 390 >> $wh
			echo 410 >> $wh
			exit
			
		elif [ $y -gt 599 ]; then
			echo 400 >> $wh
			echo 460 >> $wh
			echo 450 >> $wh
			echo 300 >> $wh
			echo 230 >> $wh
			echo 170 >> $wh
			echo 100 >> $wh
			echo 250 >> $wh
			echo 120 >> $wh
			echo 460 >> $wh
			echo 390 >> $wh
			echo 410 >> $wh
			exit
			
		elif [ $y -gt 400 ]; then
			echo 400 >> $wh
			echo 460 >> $wh
			echo 400 >> $wh
			echo 280 >> $wh
			echo 500 >> $wh
			echo 320 >> $wh
			echo 500 >> $wh
			echo 320 >> $wh
			echo 120 >> $wh
			echo 460 >> $wh
			echo 380 >> $wh
			echo 400 >> $wh
			exit
		fi
		
		# weekly report
		if ([ "$(date +%u)" = 7 ] && \
		[ "$(sed -n 1p $DC/addons/stats/cnf)" = "TRUE" ]); then
			$DS/addons/Stats/rprt A &
		fi
		
		# rss feed auto-update
		if [ "$(sed -n 1p "$DC/addons/Learning with news/.cnf")" = "TRUE" ]; then
			(sleep 200
			$DS/addons/Learning_with_news/strt A
			) &
		fi
		
		# backup
		if ([ "$(date +%u)" = 6 ] && \
		[ "$(sed -n 1p $DC_s/cnfg12)" = "TRUE" ]); then
			$DS/addons/User_data/t_bd.sh C &
		fi
		
		# search updates
		$DS/ifs/tls.sh srch &
		
		# update topics status
		[[ ! -f "$DC_tl/.cnfg1" ]] && touch "$DC_tl/.cnfg1"
		n=1
		while [ $n -le "$(cat "$DC_tl/.cnfg1" | head -30 | wc -l )" ]; do
			tp=$(sed -n "$n"p "$DC_tl/.cnfg1")
			
			if [ -f "$DC_tl/$tp/cnfg9" ]; then
				dte=$(cat "$DC_tl/$tp/cnfg9")
				dts=$(cat "$DC_tl/$tp/cnfg9" | wc -l)
				if [ $dts = 1 ]; then
					dte=$(sed -n 1p "$DC_tl/$tp/cnfg9")
					TM=$(echo $(( ( $(date +%s) - $(date -d "$dte" +%s) ) /(24 * 60 * 60 ) )))
					RM=$((100*$TM/10))
				elif [ $dts = 2 ]; then
					dte=$(sed -n 2p "$DC_tl/$tp/cnfg9")
					TM=$(echo $(( ( $(date +%s) - $(date -d "$dte" +%s) ) /(24 * 60 * 60 ) )))
					RM=$((100*$TM/15))
				elif [ $dts = 3 ]; then
					dte=$(sed -n 3p "$DC_tl/$tp/cnfg9")
					TM=$(echo $(( ( $(date +%s) - $(date -d "$dte" +%s) ) /(24 * 60 * 60 ) )))
					RM=$((100*$TM/30))
				elif [ $dts = 4 ]; then
					dte=$(sed -n 4p "$DC_tl/$tp/cnfg9")
					TM=$(echo $(( ( $(date +%s) - $(date -d "$dte" +%s) ) /(24 * 60 * 60 ) )))
					RM=$((100*$TM/60))
				fi
				nstll=$(grep -Fxo "$tp" "$DC_tl/.cnfg3")
				if [ -n "$nstll" ]; then
					if [ "$RM" -ge 100 ]; then
						echo "9" > "$DC_tl/$tp/cnfg8"
					fi
					if [ "$RM" -ge 150 ]; then
						echo "10" > "$DC_tl/$tp/cnfg8"
					fi
				else
					if [ "$RM" -ge 100 ]; then
						echo "4" > "$DC_tl/$tp/cnfg8"
					fi
					if [ "$RM" -ge 150 ]; then
						echo "5" > "$DC_tl/$tp/cnfg8"
					fi
				fi
			fi
			let n++
		done
		$DS/mngr.sh mkmn & exit 1
	fi
fi

if [[ "$1" = "panel" ]]; then
	if [ -d $DM ]; then
		#wth=$(sed -n 11p $DC_s/cnfg18)
		#hgt=$(sed -n 12p $DC_s/cnfg18)
		yad --geometry=185x318-200-450 --width=170 --height=220 \
			--name=idiomind --fixed --title="Idiomind" --no-buttons \
			--icons --single-click --on-top --borders=0 \
			--read-dir=$DS/default/new --item-width=65 \
			--window-icon=idiomind --class=idiomind
			ret=$?
			if  [[ "$ret" -eq 0 ]]; then
				exit 1 & rm "$DC_tlt/lstntry"
			fi
	else
		$DS/ifs/1u
	fi
    
elif [[ "$1" = "--version" ]]; then
    echo "2.1-alpha" & exit 1
elif [[ "$1" = "-v" ]]; then
    echo "2.1-alpha" & exit 1

elif [[ $(echo "$1" | grep -o '.idmnd') = '.idmnd' ]]; then
	wth=$(sed -n 4p $DC_s/cnfg18)
	eht=$(sed -n 3p $DC_s/cnfg18)
	dte=$(date "+%d %B")
	c=$(echo $(($RANDOM%1000)))
	if [ ! -d $DT ]; then
		mkdir $DT
	fi
	mkdir $DT/idmimp_$c
	(cp -f $DS/default/p1.sh $DT/p1.$c
	cp -f $DS/default/p2.sh $DT/p2.$c
	sed -i 's/X015x/'$c'/g' $DT/*.$c) &
	cp "$1" $DT/import.tem
	cd $DT
	mv ./import.tem ./import.tar.gz
	cd ./idmimp_$c
	tar -xzvf ../import.tar.gz
	ls -t -d -N * > $DT/idmimp_$c/ls
	inme=$(sed -n 1p $DT/idmimp_$c/ls)
	echo "$inme"
	tmp="$DT/idmimp_$c/$inme"
	lgtli=$(sed -n 2p "$tmp/cnfg12")
	lng=$(sed -n 3p "$tmp/cnfg12")
	lgsli=$(sed -n 4p "$tmp/cnfg12")
	crea=$(sed -n 6p "$tmp/cnfg12")
	cc=$(sed -n 1p "$tmp/cnfg12")
	cgy=$(sed -n 9p "$tmp/cnfg12")
	nt=$(sed -n 11p "$tmp/cnfg12")
	if [ -f "$tmp/words/images/img.png" ]; then
	img="$tmp/words/images/img.png"
	s="\n"
	else
	img="$DS/images/trans.png"
	fi
	
	if [ "$inme" != "$cc" ]; then
	int="$(sed -n 6p $DS/ifs/trans/$lgs/$lgs | sed 's/|/\n/g')"
		cstn=$($yad --name=idiomind \
		--image=error --button=gtk-ok:1\
		--text=" <b>$file_err</b>\\n" \
		--image-on-top  --sticky \
		--width=280 --height=120 \
		--title=Idiomind \
		--skip-taskbar --center \
		--window-icon=idiomind)
		rm -fr $DT/idmimp_$c $DT/*.$c \
		$DT/import.tar.gz
	else
		[[ $(echo "$inme" | wc -c) -gt 40 ]] && title="${inme:0:40}..." || title="$inme"
		cd "$tmp"
		ws=$(cat "cnfg3" | wc -l)
		ss=$(cat "cnfg4" | wc -l)
		itxt="<big><b> $title</b></big><small>\\n ${lgsli^} <b>></b> $lgtli\\n $category: ${cgy^}</small>"
		dlck="$DT/p1.$c"
		cat "$tmp/cnfg0" | awk '{print $0""}' | \
		$yad --list --name=Idiomind --title="Idiomind" \
		--ellipsize=END --print-all --image-on-top \
		--image="$img" --text="$itxt"  --class=Idiomind \
		--scroll --no-headers \
		--width="$wth" --height="$eht" --image-on-top \
		--window-icon=idiomind --column=Items --center \
		--dclick-action="$dlck" \
		--button="$install":0 --button="$close":1
			ret=$?
			
			if [ "$ret" -eq 1 ]; then
				rm -fr "$DT/idmimp_$c" $DT/*.$c \
				$DT/import.tar.gz & exit 1
			elif [ "$ret" -eq 0 ]; then
				if2=$(cat $DC/topics/$lgtli/.cnfg1 | wc -l)
				snm=$(cat $DC/topics/$lgtli/.cnfg1 | grep -Fo "$inme" | wc -l)
				
				if [ $if2 -ge 50 ]; then
					$yad  --name=idiomind --center \
					--image=info --class=idiomind \
					--text=" <b>$topics_max</b>\\n" \
					--image-on-top --sticky --skip-taskbar \
					--width=340 --height=120 \
					--title=Idiomind \
					--window-icon=idiomind \
					--button=gtk-ok:1
					rm -rf $DT/idmimp_$c $DT/*.$c \
					$DT/import.tar.gz & exit 1
				fi
		
				if [ "$snm" -ge 1 ]; then
					inm="$inme $snm"
					$yad  --name=idiomind \
					--image=info --sticky \
					--text=" $name_eq  \\n $name_eq2 <b>$inm</b>  \\n" \
					--class=idiomind --center --skip-taskbar \
					--image-on-top --width=340 --height=120 \
					--window-icon=idiomind \
					--title=Idiomind --button=Cancel:1 \
					--button=gtk-ok:0
						ret=$?
					if [ $ret != 0 ]; then
						rm -fr $DT/idmimp_$c $DT/*.$c \
						$DT/import.tar.gz & exit 1
					fi
				else
					inm="$inme"
				fi

				if [ ! -d "$DM_t/$lgtli" ]; then
					mkdir "$DM_t/$lgtli"
					mkdir "$DM_t/$lgtli/.share"
					mkdir "$DC/topics/$lgtli"
					mkdir "$DC_a/Learning with news/$lgtli"
					mkdir "$DC_a/Learning with news/$lgtli/subscripts"
					"$DS/addons/Learning_with_news/examples/$lgtli"
					cp -f "$DS/addons/Learning_with_news/examples/$lgtli" \
					"$DC_a/Learning with news/$lgtli/subscripts/Example"
				fi
				mkdir "$DM/topics/$lgtli/$inm"
				mkdir "$DC/topics/$lgtli/$inm"
				drit="$DM/topics/$lgtli/$inm"
				dric="$DC/topics/$lgtli/$inm"
				mkdir "$dric/Practice"
				cp -f $DS/addons/Practice/default/.* \
				"$dric/Practice"
				cd "$tmp"
				cp -n ./.audio/*.mp3 "$DM_t/$lgtli/.share/"
				rm -fr ./.audio
				cp -fr ./.* "$drit/"
				cp -f cnfg12 "$dric/cnfg12"
				echo "6" > "$dric/cnfg8"
				cp -f cnfg0 "$dric/cnfg0"
				cp -f cnfg0 "$dric/cnfg1"
				cp -f cnfg3 "$dric/cnfg3"
				cp -f cnfg4 "$dric/cnfg4"
				cp -f cnfg5 "$dric/cnfg5"
				cp -f cnfg10 "$dric/cnfg10"
				echo "$nt" > "$dric/nt"
				rm -r -f $DT/idmimp_$c $DT/*.$c
				cp -f $DS/default/tpc.sh "$dric/tpc.sh"
				chmod +x "$dric/tpc.sh"
				echo "$lng" > $DC_s/cnfg10
				echo "$lgtli" >> $DC_s/cnfg10
				cd "$dric"
				echo $dte > cnfg13
				echo "$inm" >> "$DC/topics/$lgtli/.cnfg3"
				sed -i 's/'"$inm"'//g' "$DC/topics/$lgtli/.cnfg2"
				sed '/^$/d' $DC/topics/$lgtli/.cnfg2 > $DC/topics/$lgtli/.cnfg2_
				mv -f $DC/topics/$lgtli/.cnfg2_ $DC/topics/$lgtli/.cnfg2
				$DS/mngr.sh mkmn &&
				"$dric/tpc.sh" &
				rm -r -f $DT/idmimp_$c $DT/*.$c \
				$DT/import.tar.gz & exit 1
			else
				rm -r -f $DT/idmimp_$c $DT/*.$c \
				$DT/import.tar.gz
			fi
		fi
	exit 1
fi

# topic
if [ "$1" = topic ]; then
	
	if [ -n "$tpc" ]; then
		eht=$(sed -n 3p $DC_s/cnfg18)
		wth=$(sed -n 4p $DC_s/cnfg18)
		mde=$(sed -n 2p $DC_s/cnfg8)
		title=$(sed -n 3p $DC_s/cnfg8)
		[[ ! -f "$DC_tlt/cnfg0" ]] && touch "$DC_tlt/cnfg0"
		[[ ! -f "$DC_tlt/cnfg1" ]] && touch "$DC_tlt/cnfg1"
		[[ ! -f "$DC_tlt/cnfg2" ]] && touch "$DC_tlt/cnfg2"
		ls0="$DC_tlt/cnfg0"
		ls1="$DC_tlt/cnfg1"
		ls2="$DC_tlt/cnfg2"
		nt="$(cat "$DC_tlt/cnfg10")"
		if [ $(echo "$tpc" | wc -c) -gt 50 ]; then
			ttl="${tpc:0:50}..."
		else
			ttl="$tpc"
		fi
		if [ -f "$DM_tlt/words/images/img.png" ]; then
		img="$DM_tlt/words/images/img.png"
		s="\n"
		else
		img=$DS/images/trans.png
		fi
		echo "tpcs.$tpc.tpcs" >> \
		$DC/addons/stats/.log &
		inx=$(cat "$ls0" | wc -l)
		tb1=$(cat "$ls1" | wc -l)
		tb2=$(cat "$ls2" | wc -l)
	fi

	# own
	if echo "$mde" | grep "wn"; then
		[ -z "$tpc" ] && exit 1
		cd "$DC_tlt"
		ws=$(cat cnfg3 | wc -l)
		ss=$(cat cnfg4 | wc -l)
		itxt="<big><b> $ttl </b> </big> <small>\\n  $ss $sentences$s  $ws $words</small>"
		cd $DS
		c=$(echo $(($RANDOM%100000)))
		KEY=$c
		cnf1=$(mktemp $DT/cnf1.XXXX.x)
		cnf2=$(mktemp $DT/cnf2.XXXX.x)
		cnf3=$(mktemp $DT/cnf3.XXXX.x)
		
		if [ "$inx" -lt 1 ]; then
			
			echo "$nt" | $yad --text-info --plug=$KEY --margins=14 \
			--wrap --editable --text="$itxt" --fore=gray40 \
			--show-uri --fontname=vendana > "$cnf3" &
			$yad --notebook --name=idiomind --center --title="Idiomind" \
			--image="$img" --text="  <b>$tpc</b>" \
			--class=idiomind --align=right --key=$KEY  \
			--tab-borders=0 --center --always-print-result \
			--tab="  $notes  " --window-icon=idiomind \
			--buttons-layout=edge --image-on-top --class=idiomind \
			--width="$wth" --height="$eht" --borders=0  \
			--button="$delete":"$DS/mngr.sh dlt" \
			--button="$close":2 
			ret=$?
					
				if [ $ret -eq 2 ]; then
					
					if [ -f "$cnf3" ]; then
						if [ "$(cat $cnf3)" != "$nt" ]; then
							cat $cnf3 > "$DC_tlt/cnfg10"
						fi
					fi
					rm -f "$cnf3" &
					
				else
					if [ -f "$cnf3" ]; then
						if [ "$(cat $cnf3)" != "$nt" ]; then
							cat $cnf3 > "$DC_tlt/cnfg10"
						fi
					fi
				rm -f $DT/*.x
				fi
			
		elif [ "$tb1" -ge 1 ]; then
			if [ -f "$DC_tlt/cnfg9" ] && [ -f "$DC_tlt/cnfg7" ]; then
				dts=$(cat "$DC_tlt/cnfg9" | wc -l)
				if [ $dts = 1 ]; then
					dte=$(sed -n 1p "$DC_tlt/cnfg9")
					adv="<b>  10 $cuestion_review </b>"
					TM=$(echo $(( ( $(date +%s) - $(date -d "$dte" +%s) ) /(24 * 60 * 60 ) )))
					RM=$((100*$TM/10))
					tdays=10
				elif [ $dts = 2 ]; then
					dte=$(sed -n 2p "$DC_tlt/cnfg9")
					adv="<b>  15 $cuestion_review </b>"
					TM=$(echo $(( ( $(date +%s) - $(date -d "$dte" +%s) ) /(24 * 60 * 60 ) )))
					RM=$((100*$TM/15))
					tdays=15
				elif [ $dts = 3 ]; then
					dte=$(sed -n 3p "$DC_tlt/cnfg9")
					adv="<b>  30 $cuestion_review </b>"
					TM=$(echo $(( ( $(date +%s) - $(date -d "$dte" +%s) ) /(24 * 60 * 60 ) )))
					RM=$((100*$TM/30))
					tdays=30
				elif [ $dts = 4 ]; then
					dte=$(sed -n 4p "$DC_tlt/cnfg9")
					adv="<b>  60 $cuestion_review </b>"
					TM=$(echo $(( ( $(date +%s) - $(date -d "$dte" +%s) ) /(24 * 60 * 60 ) )))
					RM=$((100*$TM/60))
					tdays=60
				fi

				if [ "$RM" -ge 100 ]; then
					echo "4" > "$DC_tlt/cnfg8"
					$DS/mngr.sh mkmn &
					RM=100
					$yad --title="$tpc" --window-icon=idiomind \
					--borders=20 --buttons-layout=edge --name=idiomind \
					--image=dialog-question \
					--on-top --window-icon=idiomind \
					--buttons-layout=edge --center --class=idiomind \
					--button="       $notyet       ":1 \
					--button="        $review        ":2 \
					--text="$adv" \
					--width=410 --height=150
					ret=$?
						if [ "$ret" -eq 2 ]; then
							echo "3" > "$DC_tlt/cnfg8"
							$DS/mngr.sh mkmn
							rm -f "$ls2" 
							rm -f "$DC_tlt/cnfg7"
							cp -f "$ls0" "$ls1" && idiomind topic & exit 1
						fi 
				fi
				echo "$nt"
				$yad --align=center --borders=80 \
				--text="<u><b>$learned</b></u>   * $new_items ($tb1).\\n$time_review: $tdays" \
				--bar="":NORM $RM \
				--multi-progress --plug=$KEY --tabnum=1 &
				cat "$ls2" | awk '{print $0"\n"}' | $yad \
				--no-headers --list --plug=$KEY --tabnum=2 \
				--expand-column=1 --ellipsize=END --print-all \
				--column=Name:TEXT --column=Review:CHK \
				--dclick-action='./vwr.sh v2' > "$cnf2" &
				echo "$nt" | $yad --text-info --plug=$KEY --margins=14 \
				--wrap --editable --tabnum=3 --fore='gray40' \
				--show-uri --fontname=vendana > "$cnf3" &
				$yad --notebook --name=Idiomind --center \
				--class=Idiomind --align=right --key=$KEY \
				--tab-borders=0 --center --title="Idiomind" \
				--image="$img" --text="$itxt" \
				--tab=" $review " --window-icon=idiomind \
				--tab=" $learned ($tb2) " --tab=" $notes " \
				--ellipsize=END --image-on-top --always-print-result \
				--width="$wth" --height="$eht" --borders=0 \
				--button="$review":4 --button="$edit":3 --button="$close":2
			else
				cat "$ls1" | awk '{print $0"\n"}' | $yad \
				--no-headers --list --plug=$KEY --tabnum=1 \
				--dclick-action='./vwr.sh v1'\
				--expand-column=1 --ellipsize=END --print-all \
				--column=Name:TEXT --column=Learned:CHK > "$cnf1" &
				cat "$ls2" | awk '{print $0"\n"}' | $yad \
				--no-headers --list --plug=$KEY --tabnum=2 \
				--expand-column=1 --ellipsize=END --print-all \
				--column=Name:TEXT --column=Review:CHK \
				--dclick-action='./vwr.sh v2' > "$cnf2" &
				echo "$nt" | $yad --text-info --plug=$KEY --margins=14 \
				--tabnum=3 --fore='gray40' --wrap \
				--show-uri --fontname=vendana --editable > "$cnf3" &
				$yad --notebook --name=Idiomind --center --key=$KEY \
				--class=Idiomind --align=right --window-icon=idiomind \
				--tab-borders=0 --center --title="Idiomind" \
				--image="$img" --text="$itxt" \
