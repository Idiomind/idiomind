#!/bin/bash

if [[ "$1" = dlgcnfg ]]; then
source "$DS/ifs/mods/cmns.sh"
msg "$(gettext "Does not need configuration.")\n" info "$4"


else
name="merriamwebster"
lang="en"

c=0000000
wget -T 51 -q -U Mozilla "http://media.merriam-webster.com/soundc11/${1:0:1}/${1}${c::-${#1}}1.wav"
[ -f ./"${1}${c::-${#1}}1.wav" ] && sox ./"${1}${c::-${#1}}1.wav" ./"${1}.mp3" && rm ./"${1}${c::-${#1}}1.wav"
exit
fi


