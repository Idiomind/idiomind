#!/bin/bash
# -*- ENCODING: UTF-8 -*-

Name="baidu"
Language="auto"

if [ "$2" = zh-cn ]; then t=zh
elif [ "$2" = en ]; then t=en
elif [ "$2" = ja ]; then t=jp
elif [ "$2" = pt ]; then t=pt
else exit; fi

wget -q -U Mozilla -O ./"${1}.mp3" "http://tts.baidu.com/text2audio?lan=$t&ie=UTF-8&text=${1}"

exit
