#!/bin/bash
cd "$2"
word="$1"
a="$(echo $word | head -c 1)"
b="$(echo $word | head -c 3)"
c="$(echo $word | head -c 5)"
wget http://www.macmillandictionary.com/media/british/uk_pron/$a/$b/$c/"$word"_British_English_pronunciation.mp3
mv -f ./"$word"_British_English_pronunciation.mp3 ./"$word".mp3
exit
