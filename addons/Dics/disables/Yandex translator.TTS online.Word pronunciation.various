#!/bin/bash
# -*- ENCODING: UTF-8 -*-

if [ "$2" = en ]; then t=en_GB
elif [ "$2" = es ]; then t=es_ES
elif [ "$2" = pt ]; then t=pt_PT
elif [ "$2" = ru ]; then t=ru_RU
elif [ "$2" = it ]; then t=it_IT
elif [ "$2" = de ]; then t=de_DE
elif [ "$2" = fr ]; then t=fr_FR
else exit; fi

wget -q -U Mozilla -O ./"${1}.mp3" "http://tts.voicetech.yandex.net/tts?format=mp3&quality=hi&platform=web&application=translate&lang=$t&text=${1}"
exit
