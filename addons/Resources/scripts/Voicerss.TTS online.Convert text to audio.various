    export TESTURL="http://api.voicerss.org/?key=$key&hl=$v&r=$s&c=mp3&f=16khz_16bit_mono&src=${_test}"
    export URL="http://api.voicerss.org/?key=$key&hl=$v&r=$s&c=mp3&f=16khz_16bit_mono&src=${word}"
