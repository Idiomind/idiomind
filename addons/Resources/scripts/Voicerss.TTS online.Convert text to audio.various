    fi
    if [ -z "$voice" ]; then
        if [ "$lgt" = "en" ]; then 
            v='en-us'
            _test="test"
        elif [ "$lgt" = "es" ]; then 
            v='es-es'
            _test="prueba"
        elif [ "$lgt" = "pt" ]; then 
            v='pt-br'
            _test="teste"
        elif [ "$lgt" = "ru" ]; then 
            v='ru-ru'
            _test="тест"
        elif [ "$lgt" = "it" ]; then 
            v='it-it'
            _test="prova"
        elif [ "$lgt" = "de" ]; then 
            v='de-de'
            _test="Prüfung"
        elif [ "$lgt" = "fr" ]; then 
            v='fr-fr'
            _test="tester"
        elif [ "$lgt" = "zh-cn" ]; then 
